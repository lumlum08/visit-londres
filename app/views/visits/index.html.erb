
<div class="container my-2">
<h1>Voir toutes les visites</h1>
</div>

<div class="container d-flex justify-content-between">

    <% @visits.each do |visit| %>
      <div>
        <%= link_to visit.name,  visit_path(visit), class: 'btn btn-ghost my-1'%>
        <%= link_to 'Update',  edit_visit_path(visit), class: 'btn btn-success'%>
        <%= link_to 'Delete',  visits_path(visit), method: :delete, class: 'btn btn-danger align-self-start', data: { confirm: 'Are you sure you want to delete this visit ?' } %>
        <%= link_to 'Back to Home!',  root_path, class: 'btn btn-success'%>
        </div>
    <% end %>
  </div>
</div>


<div class="container my-2">
  <%= link_to "Add a new visit",  new_visit_path(@visit), class: 'btn btn-warning my-1'%>
</div>
